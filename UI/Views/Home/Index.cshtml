    <script>
        $(document).ready(function () {
            $(".add-to-cart-btn").click(function (e) {
                e.preventDefault();

                const productId = $(this).data("product-id");
                const userId = $(this).data("user-id");
                const price = $(this).data("price");

                $.ajax({
                    url: '/Basket/AddToBasket', // Controller/Action yolunu kendi projenize göre ayarlayın
                    type: 'POST',
                    contentType: 'application/json',
                    data: JSON.stringify({
                        UserId: userId,
                        ProductId: productId,
                        Price: price
                    }),
                            success: function (response) {
            if (response.success) {
                Swal.fire("Başarılı", "Ürün sepete eklendi!", "success");

                // Sepet HTML'ini getir
                $.get('/Basket/GetBasketHtml', function (res) {
                    $(".header-cart-content").html(res.html);
                    $(".icon-header-noti").attr("data-notify", res.count);
                });
            } else {
                Swal.fire("Hata", response.message || "Bir hata oluştu", "error");
                    }
                },
                    error: function () {
                        Swal.fire("Hata", "İstek gönderilirken bir sorun oluştu", "error");
                    }
                });
            });
        });
    </script>
    <script>
        $(document).on("click", ".delete-from-cart", function (e) {
            e.preventDefault();
            const basketId = parseInt($(this).data("basket-id"));
            console.log("Basket ID:", basketId);
            Swal.fire({
                title: 'Emin misiniz?',
                text: "Bu ürünü sepetten silmek istiyor musunuz?",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Evet, sil',
                cancelButtonText: 'İptal'
            }).then((result) => {
                if (result.isConfirmed) {
                    $.ajax({
                        url: '/Basket/DeleteFromBasket',
                        type: 'POST',
                        data: { basketId: basketId },
                        success: function (res) {
                            if (res.success) {
                                // Sepet içeriğini ve adedi güncelle
                                $.get('/Basket/GetBasketHtml', function (res) {
                                    $(".header-cart-content").html(res.html);
                                    $(".icon-header-noti").attr("data-notify", res.count);
                                });
                            } else {
                                Swal.fire("Hata", res.message || "Silme işlemi başarısız", "error");
                            }
                        },
                        error: function () {
                            Swal.fire("Hata", "Silme sırasında bir hata oluştu", "error");
                        }
                    });
                }
            });
        });
    </script>

